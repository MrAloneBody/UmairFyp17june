<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchDetailActivity"
    android:id="@+id/match_details">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#fff"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TableRow>
                <TextView
                    android:id="@+id/team1tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000">

                </TextView>
                <TableRow>

                <TextView
                    android:id="@+id/score1Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    >
                </TextView>
                <TextView
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="#000"
                    >
                </TextView>
                <TextView
                    android:id="@+id/wicket1tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#000"
                    >
                </TextView>
                <TextView
                    android:text="("
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#000"
                    >
                </TextView>
                    <TextView
                        android:id="@+id/over1tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:text=")"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textColor="#000"
                        >
                    </TextView>

                </TableRow>

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/team2tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000">

                </TextView>

                <TableRow>

                    <TextView
                        android:id="@+id/score2Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:text="/"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/wicket2tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:text="("
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/over2tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="#000"
                        >
                    </TextView>
                    <TextView
                        android:text=")"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textColor="#000"
                        >
                    </TextView>

                </TableRow>


            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/matchstatustv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:textColor="#000"

                    >
                </TextView>

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/datetv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:textColor="#000"

                    >
                </TextView>

            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>